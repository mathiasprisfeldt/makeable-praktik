<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_border_margin"
        android:layout_marginEnd="@dimen/screen_border_margin"
        android:layout_marginTop="@dimen/chat_message_spacing"
        android:layout_marginBottom="@dimen/chat_message_spacing"
>
    <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Message"
            android:background="@drawable/message_txt_bg"
            android:padding="@dimen/chat_msg_padding"
            android:maxWidth="@dimen/chat_msg_max_width"
            app:layout_constraintHorizontal_bias="1">

    </TextView>

</android.support.constraint.ConstraintLayout>